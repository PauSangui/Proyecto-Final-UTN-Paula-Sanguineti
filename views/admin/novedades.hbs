
{{!--fila 1--}}
<div class="row">
    <div class="col" id="bienvenido-usuario">
        <p class="text-center">
            <span>Bienvenidx {{usuario}}!</span>
        </p>
    </div>
</div>
{{!--fin fila 1--}}

<div class="Listado-de-novedades">
    {{!--fila 2--}}
    <div class="row">
        <div class="col-7">
            <h2 class="title-Listado-de-novedades">Listado de novedades<h2>
        </div>
    </div>
    {{!--fin fila 2--}}

    {{!--fila 3--}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-light">
                        <th scope="col">#</th>
                        <th scope="col" class="text-right">Imagenes</th>
                        <th scope="col">Titulo</th>
                        <th scope="col" class="text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{{imagen}}}</td>
                        <td>{{titulo}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-light" style="padding: 10px;">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-light" style="padding: 10px;">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
</div>
{{!--fin fila 3--}}
</div>
