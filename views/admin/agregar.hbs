<div class="container" id="Container-agregar">
    <div class="row" id="Row-agregar">
        <div class="col-6 offset-3" id="Col-agregar">
            <h4 class="Titulo-agregar">Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Imagen: <input type="file" name="imagen" id="imagen" class="form-control"></label>
                </div>
                <div class="form-group" id="form-agregar">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group" id="form-agregar">
                    <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>
                </div>
                 <div class="form-group" id="form-agregar">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-light" id="Boton-guardar">Guardar</button>
            </form>
            {{#if error}}
                <p class="message-error">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>