<div class="container" id="Container-modificar">
  <div class="row" id="Row-modificar">
    <div class="col-6 offset-3" id="Col-modificar">
      <h4 class="Titulo-modificar">Modificar novedad</h4>

      <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
        <input type="hidden" value="{{novedad.id}}" name="id"/>

        <div class="form-group" style="margin-bottom: 20px">
          <p>
            <label>Imagen:
              <input type="file" name="imagen" id="imagen" /></label>
          </p>
          <p>
            <label><input type="checkbox" name="img_delete" id="img_delete" value="1"/> Eliminar imagen actual? </label>
            <input type="hidden" name="img_original" value="{{novedad.img_id}}"/>
          </p>
        </div>
        <div class="form-group" id="form-modificar">
          <label for="">Titulo</label>
          <input
            type="text"
            class="form-control"
            name="titulo"
            value="{{novedad.titulo}}"
          />
        </div>
        <div class="form-group" id="form-modificar">
          <label for="">Subtitulo</label>
          <input
            type="text"
            class="form-control"
            name="subtitulo"
            value="{{novedad.subtitulo}}"
          />
        </div>
        <div class="form-group" id="form-modificar">
          <label for="">Cuerpo</label>
          <textarea
            name="cuerpo"
            class="form-control"
          >{{novedad.cuerpo}}</textarea>
        </div>
        <button
          type="submit"
          class="btn btn-light"
          id="Boton-guardar"
        >Guardar</button>
      </form>
      {{#if error}}
        <p class="message-error">{{message}}</p>
      {{/if}}
    </div>
  </div>
</div>