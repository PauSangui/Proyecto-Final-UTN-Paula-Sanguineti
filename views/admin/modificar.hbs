<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4 style="margin-bottom: 20px">Modificar la novedad</h4>
            <form method="post" action="/admin/novedades/modificar" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{novedad.id}}">
                <div class="form-group" style="margin-bottom: 20px">
                    <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control"
                        name="titulo">
                </div>
                <div class="form-group" style="margin-bottom: 20px">
                    <textarea placeholder="Subtitulo" class="form-control" name="subtitulo"
                        value="{{novedad.subtitulo}}"></textarea>
                </div>
                <div class="form-group" style="margin-bottom: 20px">
                    <textarea placeholder="Cuerpo" class="form-control" name="cuerpo"
                        value="{{novedad.cuerpo}}"></textarea>
                </div>
                <div class="form-group" style="margin-bottom: 20px">
                    <p>
                        <label for="">Imagen: <input type="file" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>

                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <h4>{{message}}</h4>
            {{/if}}
        </div>
    </div>
</div>